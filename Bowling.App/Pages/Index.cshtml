                </div>
            </div>
        </div>
        <br />

        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#swingModal" onclick="resetSwingButtons()">
            Swing!
        </button>

        <div class="modal fade" id="swingModal" tabindex="-1" role="dialog" aria-labelledby="swingModalTitle" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="swingModalTitle">First Shot</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <h1 id="pins-down">Hit it!</h1>
                    </div>
                    <div class="modal-footer">
                        <button type="button" id="btn-hit-1" class="btn btn-primary btn-lg btn-block" onclick="firstRoll()">Go!</button>
                        <button type="button" id="btn-next" class="btn btn-dark btn-lg btn-block" onclick="nextShot()">Proceed to next shot.</button>
                        <button type="button" id="btn-hit-2" class="btn btn-success btn-lg btn-block" onclick="secondRoll()">Go!</button>
                        <button type="button" id="btn-close" class="btn btn-danger btn-lg btn-block"  data-dismiss="modal">Close</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

</body>
</html>

@section Scripts {
    <script>
        document.getElementById("btn-next").style.display = "none";
        document.getElementById("btn-hit-2").style.display = "none";
        document.getElementById("btn-close").style.display = "none";

        let shot = 1;
        function roll() {
            let x = 0;
            x = Math.floor((Math.random() * 10) + 1);
            let rollingColor = (shot == 1) ? "blue" : "green";

            for (let i = 1; i <= x; i++) {
                setTimeout(function timer() {
                    document.getElementById("pins-down").innerHTML = i;
                    document.getElementById("pins-down").style.color = rollingColor;

                    if (i == x) {
                        document.getElementById("pins-down").innerHTML = "You got " + i + " pins down!";
                        document.getElementById("pins-down").style.color = "black";

                        if (i == 1) {
                            document.getElementById("pins-down").innerHTML = "You got " + i + " pin down!";
                        }
                    }

                    if (i == 10) {
                        let label = "";
                        label = (shot > 1) ? "Wow! That's a Spare!" : "Amazing! That's a Strike!"; 
                        document.getElementById("pins-down").innerHTML = label;
                        document.getElementById("pins-down").style.color = "black";
                    }

                }, i * 50);
            }
        }

        function firstRoll() {
            shot = 1;
            document.getElementById("btn-hit-1").style.display = "none";
            roll();
            document.getElementById("btn-next").style.display = "block";
            
            //send api here
        }

        function secondRoll() {
            shot = 2;
            roll();
            //send api here
            //refresh here..
            document.getElementById("btn-close").style.display = "block";
            document.getElementById("btn-hit-2").style.display = "none";
        }

        function resetSwingButtons() {
            shot = 1;
            document.getElementById("pins-down").innerHTML = 0;
            document.getElementById("swingModalTitle").innerHTML = "First Shot";
            document.getElementById("btn-hit-1").style.display = "block";
            document.getElementById("btn-next").style.display = "none";
            document.getElementById("btn-hit-2").style.display = "none";
            document.getElementById("btn-close").style.display = "none";
        }

        function nextShot() {
            document.getElementById("swingModalTitle").innerHTML = "Second Shot";
            document.getElementById("pins-down").innerHTML = 0;
            document.getElementById("btn-next").style.display = "none";
            document.getElementById("btn-hit-2").style.display = "block";
        }

    </script>
}

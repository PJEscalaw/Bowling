@section Scripts {
    <script>
        let mainShotIndex = 0;

        let firstShot = 0;
        let secondShot = 0;

        let frame = 1;
        let shotIndex = 1;

        let strikeIndex = 0;
        let wasStrike = false;
        
        let isSpare = false;

        let previousScore = 0;

        function pinsDown(pins) {
            mainShotIndex++;
            if (shotIndex == 1) { //for first shotIndex.
                firstShot = pins; //preparation for spare.
                shotIndex = 2; //setting shotIndex 2

                if (pins == 10) { //for strikes
                    wasStrike = true;
                    shotIndex = 1; //resets shotIndex to 1 for the next frame.
                    strikeIndex++;
                    document.getElementById("f" + frame + "-score-2").innerHTML = "X";
                    showAll(); //shows all pins
                    frame++; //to move to the next frame.
                    getAllStrikeScores();
                }
                else { //normal shots.
                    document.getElementById("f" + frame + "-score-1").innerHTML = pins;
                }

                getSpareScore(firstShot); //gets the spare score.
            }
            else if (shotIndex == 2) { //for second shotIndex.
                secondShot = pins; //prepration for spare.
                shotIndex = 1; //reset shotIndex to 1 for next frame.
                document.getElementById("f" + frame + "-score-2").innerHTML = pins;

                isSpare = (firstShot + secondShot == 10); //determines if the shot is spare.
                if (isSpare) {
                    document.getElementById("f" + frame + "-score-2").innerHTML = "/";
                }
                else if (wasStrike)
                {
                    getStrikeScore();
                    getNormalScore();
                }
                else {
                    //set normal shots here.
                    getNormalScore();
                }

                frame++; //moving to next frame.
            }

            hideAll(); //hides shot pins.
            let rP = (10 - pins); //sets the remaining pins.
            setPins(rP); //shows the remaining pins.

            if (shotIndex == 1) {
                showAll();
            }
            console.log(mainShotIndex);

            if (mainShotIndex == 3) { 
                mainShotIndex = 0;
                console.log("calculate strike");
                console.log("first shot = " + firstShot);
                console.log("second shot = " + secondShot);
            }
        }

        //hides shot pins.
        function hideAll() {
            for (let i = 0; i <= 10; i++) {
                document.getElementById("btn" + i).style.display = "none";
            }
        }

        //shows the remaining pins.
        function showAll() {
            for (let i = 0; i <= 10; i++) {
                document.getElementById("btn" + i).style.display = "block";
            }
        }

        //shows the remaining pins.
        function setPins(rP) {
            for (let i = 0; i <= rP; i++) {
                document.getElementById("btn" + i).style.display = "block";
            }
        }

        function getSpareScore(nextScore) {
            if (!isSpare) return;
            let spareScore = (previousScore + 10 + nextScore);
            document.getElementById("f" + (frame - 1) + "-final-score").innerHTML = spareScore;
            previousScore = spareScore;
            isSpare = false; //resets flag if the shotIndex is spare.
        }

        function getNormalScore() {
            let normalScore = (previousScore + firstShot + secondShot);
            document.getElementById("f" + (frame) + "-final-score").innerHTML = normalScore;
            previousScore = normalScore;
        }

        function getStrikeScore() {
            if (!wasStrike) return;
            let strikeScore = (previousScore + 10 + firstShot + secondShot);
            document.getElementById("f" + (frame-1) + "-final-score").innerHTML = strikeScore;
            previousScore = strikeScore;
            wasStrike = false;
        }

        function getAllStrikeScores() {
            if (strikeIndex > 2) {
                let allStrikeScore = (previousScore + 10 + firstShot + firstShot);
                document.getElementById("f" + (frame - 3) + "-final-score").innerHTML = allStrikeScore;
                previousScore = allStrikeScore;
                wasStrike = false;
            }
            else if () {
                //please continue here.
            }
        }
    </script>
